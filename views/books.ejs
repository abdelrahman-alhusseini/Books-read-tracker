<!DOCTYPE html>
<html>
<head>
  <title>Books</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="p-5">
  <div class="container">
    <h2>Books</h2>
    <a href="/add-book" class="btn btn-success mb-3">Add Book</a>
    <table class="table table-bordered">
      <thead>
        <tr><th>Title</th><th>Author</th><th>Actions</th></tr>
      </thead>
      <tbody>
        <% books.forEach(book => { %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.author %></td>
            <td>
              <a href="/edit-book/<%= book._id %>" class="btn btn-warning btn-sm">Edit</a>
              <a href="/delete-book/<%= book._id %>" class="btn btn-danger btn-sm">Delete</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
